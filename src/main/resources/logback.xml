<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="USER_HOME" value="/home/applogs/redemption"/>
    <property name="FILE_NAME" value="redemption"/>


    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <File>${USER_HOME}/${FILE_NAME}.log</File>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] - [%X{log-id}][%-5level] [%logger{0}][%M] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${USER_HOME}/${FILE_NAME}.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
    </appender>

    <root level="info">
        <appender-ref ref="file"/>
    </root>
</configuration>